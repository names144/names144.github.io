---
import { Icon } from "astro-icon";

type Social = "github" | "linkedin";

interface Props {
  social: Social;
  class?: string;
}

const SOCIAL_META = {
  github: {
    href: "https://github.com/names144",
    icon: "ri:github-fill",
    title: "GitHub",
  },
  linkedin: {
    href: "https://www.linkedin.com/in/names144",
    icon: "ri:linkedin-fill",
    title: "LinkedIn",
  },
};

const { social, class: className } = Astro.props;
const { icon, href, title } = SOCIAL_META[social];
---

<style>
  .social-icon {
    background-color: theme(colors.slate.950);
    border-radius: 50%;
    border: 1px solid transparent;
    padding: 0.15rem;

    &::after {
      content: "";
      position: absolute;
      padding: 0.15rem;
      top: 50%;
      left: 50%;
      width: 100%;
      height: 100%;
      opacity: 0;
      transform: scale(0.8) translate(-50%, -50%);
      transform-origin: 0% 0%;
      border: 2px solid theme(colors.white);
      border-radius: 50%;
      transition: transform 0.3s, opacity 0.3s;

      @media (prefers-color-scheme: light) {
        border-color: theme(colors.slate.950);
      }

      @media (prefers-reduced-motion: reduce) {
        transition: none;
      }
    }

    &:focus-visible,
    &:focus {
      outline: 0;
      &::after {
        opacity: 1;
        transform: scale(1.1) translate(-50%, -50%);
      }
    }

    &:hover::after {
      opacity: 1;
      transform: scale(1.1) translate(-50%, -50%);
    }

    & > svg {
      width: 100%;
      height: 100%;
    }

    @media (prefers-color-scheme: light) {
      background-color: theme(colors.white);
    }
  }
</style>

<a
  class={`social-icon ${className}`}
  title={title}
  href={href}
  target="_blank"
  rel="noopener noreferrer"
>
  <Icon aria-hidden="true" focusable="false" name={icon} />
  <span class="sr-only">{title}</span>
</a>
