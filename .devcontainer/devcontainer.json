// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "Node.js",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [8000],
  // Need to manually build parcel watcher and sharp for some reason..
  "postCreateCommand": "bash -i -c 'nvm install' && npm install && npm rebuild --verbose sharp && cd ./node_modules/@parcel/watcher && npm install && npm run prebuild --openssl_fips=''",
  "postStartCommand": "npm start",
  "customizations": {
    "vscode": {
      "extensions": [
        "streetsidesoftware.code-spell-checker",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
